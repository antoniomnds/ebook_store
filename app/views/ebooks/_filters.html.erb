<div class="navbar navbar-light bg-light mb-2">
  <%= form_with url: url, method: :get, class: 'form-inline' do %>
    <div class="d-flex align-items-center">
      <div class="p-2">
        <%= label_tag :tags, "Tags" %>
        <%= select_tag :tags,
                       options_from_collection_for_select(
                         @tags,
                         "id",
                         "name",
                         params[:tags]
                       ),
                       multiple: true,
                       include_blank: true,
                       class: "form-select"
        %>
      </div>
      <% unless action_name == "my_ebooks" %>
        <div class="p-2">
          <%= label_tag :users, "Users" %>
          <%= select_tag :users,
                         options_from_collection_for_select(
                           @users,
                           "id",
                           "username",
                           params[:users]
                         ),
                         multiple: true,
                         include_blank: true,
                         class: "form-select"
          %>
        </div>
      <% end %>
      <div class="p-2">
        <%= submit_tag "Filter", class: "btn btn-outline-success my-2 my-sm-0" %>
      </div>
      <div class="p-2">
        <%= link_to "Reset", url, class: "btn btn-outline-secondary my-2 my-sm-0" %>
      </div>
    </div>
  <% end %>
</div>
