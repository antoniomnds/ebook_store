<%= render @ebook %>

<div class="btn-group" role="group" aria-label="Ebook management buttons">
  <%= link_to "Back to ebooks", ebooks_path, class: 'btn btn-outline-dark' %>
  <%= link_to "Edit this ebook", edit_ebook_path(@ebook), class: 'btn btn-outline-primary' %>
  <%= button_to "Delete this ebook",
                @ebook,
                method: :delete,
                form: {
                  data: {
                    turbo_confirm: 'Are you sure?'
                  }
                },
                class: 'btn btn-outline-danger'
  %>
</div>

<div data-controller="ebook"
     data-increment-views-url="<%= increment_views_ebook_path(@ebook) %>">
</div>
