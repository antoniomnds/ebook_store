<%= form_with(url: sessions_path) do |form| %>
  <%= hidden_field_tag :back_url, request.referer %>

  <div class="row m-3">
    <%= form.label :email, style: 'display: block', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row m-3">
    <%= form.label :password, style: 'display: block', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <%= form.submit 'Login', class: 'btn btn-primary' %>
<% end %>