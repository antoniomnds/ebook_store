<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <p>
    <%= button_to "Destroy this user",
                  @user,
                  method: :delete,
                  form: {
                    data: {
                      turbo_confirm: 'Are you sure?'
                    }
                  }
    %>
  </p>
</div>
