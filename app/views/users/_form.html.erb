<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if action_name == 'edit' %>
    <div class="row m-3">
      <%= form.label :avatar, style: 'display: block', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%# retain reference to the uploaded file to not upload it again in case of form re-rendering %>
        <%= form.hidden_field :avatar, value: @user.avatar.signed_id if @user.avatar.attached? %>
        <%= form.file_field :avatar, class: 'form-control', accept: 'image/png,image/gif,image/jpeg', direct_upload: true %>
      </div>
    </div>
  <% end %>

  <div class="row m-3">
    <%= form.label :username, style: 'display: block', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="row m-3">
    <%= form.label :email, style: 'display: block', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <% if %w[edit update].include?(action_name) %>
    <div class="row m-3">
      <%= form.label :password_challenge,
                     "Current password",
                     style: 'display: block',
                     class: 'col-sm-2 col-form-label'
      %>
      <div class="col-sm-10">
        <%= form.password_field :password_challenge, class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="row m-3">
    <%= form.label :password,
                   "New password",
                   style: 'display: block',
                   class: 'col-sm-2 col-form-label'
    %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="row m-3">
    <%= form.label :password_confirmation,
                   "New password confirmation",
                   style: 'display: block',
                   class: 'col-sm-2 col-form-label'
    %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <% if current_user&.is_admin? %>
    <div class="row m-3">
      <div class="col-sm-10 offset-sm-2">
        <div class="form-check">
          <%= form.check_box :enabled, class: 'form-check-input' %>
          <%= form.label :enabled, style: 'display: block', class: 'form-check-label' %>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
