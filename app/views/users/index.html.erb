<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<table id="users">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Enabled?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="<%= dom_id user %>">
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.enabled ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to "Show", user %> |
          <%= link_to "Edit", edit_user_path(user) %> |
          <%= link_to "Delete", user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New user", new_user_path %></p>
